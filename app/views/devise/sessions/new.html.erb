<div class="flex min-h-screen">
  <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
        <p class="mt-2 text-sm leading-6 text-gray-500">
          Not a member?
          <%= link_to "Sign up", new_restaurant_registration_path, class: "link" %>
        </p>
      </div>

      <div class="mt-10">
        <div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
            <div>
              <%= f.label :email, class: "form-label" %>
              <div class="mt-2">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-input' %>
              </div>
            </div>

            <div>
              <%= f.label :password, class: "form-label" %>
              <div class="mt-2">
                <%= f.password_field :password, autofocus: true, autocomplete: "current-password", required: true, class: 'form-input' %>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "checkbox" %>
                <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-gray-700" %>
              </div>

              <div class="text-sm leading-6">
                <%= link_to 'Forgot password?', new_restaurant_password_path, class: "link" %>
              </div>
            </div>

            <div>
              <%= f.submit 'Sign in', class: "primary-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="relative hidden w-0 flex-1 lg:block">
    <img class="absolute inset-0 h-full w-full object-cover" src="https://images.unsplash.com/photo-1671588623593-6f80c45ed94f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="">
  </div>
</div>