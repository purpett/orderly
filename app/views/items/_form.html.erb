<%= form_with model: [@menu_section, item], html: { class: 'space-y-8' } do |f| %>
  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", required: true %>
  </div>

  <div>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-input" %>
  </div>

  <div>
    <%= f.label :price, class: "form-label" %>
    <div class="relative rounded-md shadow-sm">
      <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
        <span class="text-gray-500 sm:text-sm">Â£</span>
      </div>
      <%= f.number_field :price, step: 0.01, required: true, min: 0, class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div>
    <%= f.label :menu_section_id, class: "form-label" %>
    <%= f.select :menu_section_id, options_for_select(current_restaurant.menu_sections.map { |section| [section.name, section.id] }, @item.menu_section_id), {}, class: "form-select" %>
  </div>

  <%= f.submit class: 'primary-button' %>
<% end %>